---
import { template } from '../../data/settings';
import '../../styles/global.css';

interface Props {
	title: string;
	description: string;
	image: string;
}

const siteURL = Astro.site || 'https://default-site.com';
const pageURL = new URL(Astro.url.pathname, siteURL);

const { title, description } = Astro.props;
---

<!-- Base Meta Configuration -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<meta name="generator" content={Astro.generator} />

<!-- Sitemap -->
<link rel="sitemap" href={`${template.base}/sitemap-index.xml`} />

<!-- Canonical URL -->
<link rel="canonical" href={pageURL} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />
